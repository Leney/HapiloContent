<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="14dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/session_own_content"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/session_own_progressbar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/session_own_again_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="gone"
            android:src="@mipmap/img_error" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/session_image_own_content"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="11.3dp"
        app:layout_constraintRight_toLeftOf="@+id/session_image_own_iv" />

    <ImageView
        android:id="@+id/session_image_own_iv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>