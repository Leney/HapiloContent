<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:background="@mipmap/left_bg"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/jibie" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ib1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@null"
                    android:src="@drawable/stage_1_uncheck" />

                <ImageButton
                    android:id="@+id/ib2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@null"
                    android:src="@drawable/stage_2_uncheck" />

                <ImageButton
                    android:id="@+id/ib3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@null"
                    android:src="@drawable/stage_3_uncheck" />

                <ImageButton
                    android:id="@+id/ib4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@null"
                    android:src="@drawable/stage_6_uncheck" />

                <ImageButton
                    android:id="@+id/ib5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="@null"
                    android:src="@drawable/stage_5_uncheck" />

                <ImageButton
                    android:id="@+id/ib6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@null"
                    android:src="@drawable/stage_4_uncheck" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_mid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="95dp"
        android:layout_toLeftOf="@+id/rl_right"
        android:layout_toRightOf="@id/ll_left"
        android:background="@mipmap/mid_bg">

        <ListView
            android:id="@+id/lv_room"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="35dp"
            android:dividerHeight="8dp"
            android:fadeScrollbars="false"
            android:paddingBottom="7dp"
            android:paddingLeft="7dp"
            android:paddingRight="18dp"
            android:paddingTop="7dp"
            android:scrollbarFadeDuration="0"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbarThumbVertical="@drawable/bg_scrollbars" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/rl_mid"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="12dp"
        android:background="@mipmap/right_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_create_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iv_find_room"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:src="@mipmap/un_create_room" />

        <ImageView
            android:id="@+id/iv_find_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iv_fast_join"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:src="@mipmap/un_find_room" />

        <ImageView
            android:id="@+id/iv_fast_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="35dp"
            android:src="@mipmap/fast_join" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@mipmap/bg_check1">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/answer_back" />

        <TextView
            android:id="@+id/grade_one"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="365dp"
            android:layout_marginTop="25dp" />

        <TextView
            android:id="@+id/grade_two"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/grade_one"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/grade_one" />

        <TextView
            android:id="@+id/grade_three"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/grade_two"
            android:layout_marginLeft="14.5dp"
            android:layout_toRightOf="@+id/grade_two" />

        <TextView
            android:id="@+id/grade_four"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/grade_three"
            android:layout_marginLeft="17.2dp"
            android:layout_toRightOf="@+id/grade_three" />

        <TextView
            android:id="@+id/grade_five"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/grade_four"
            android:layout_marginLeft="13.5dp"
            android:layout_toRightOf="@+id/grade_four" />

        <TextView
            android:id="@+id/grade_six"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/grade_five"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@+id/grade_five" />


    </RelativeLayout>
</RelativeLayout>