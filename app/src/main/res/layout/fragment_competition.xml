<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:background="@mipmap/left_bg"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/answer_activity_leibie" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ib1"
                    style="@style/stage_image_view"
                    android:src="@drawable/stage_1_uncheck" />

                <ImageButton
                    android:id="@+id/ib2"
                    style="@style/stage_image_view"
                    android:src="@drawable/stage_2_uncheck" />

                <ImageButton
                    android:id="@+id/ib3"
                    style="@style/stage_image_view"
                    android:src="@drawable/stage_3_uncheck" />

                <ImageButton
                    android:id="@+id/ib4"
                    style="@style/stage_image_view"
                    android:src="@drawable/stage_4_uncheck" />

                <ImageButton
                    android:id="@+id/ib5"
                    style="@style/stage_image_view"
                    android:src="@drawable/stage_5_uncheck" />

                <ImageButton
                    android:id="@+id/ib6"
                    style="@style/stage_image_view"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/stage_6_uncheck" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl_mid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="100dp"
        android:layout_toLeftOf="@+id/rl_right"
        android:layout_toRightOf="@id/ll_left"
        android:background="@mipmap/mid_bg">

        <ListView
            android:id="@+id/lv_room"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="35dp"
            android:dividerHeight="8dp"
            android:fadeScrollbars="false"
            android:paddingBottom="7dp"
            android:paddingLeft="7dp"
            android:paddingRight="18dp"
            android:paddingTop="7dp"
            android:scrollbarFadeDuration="0"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbarThumbVertical="@drawable/bg_scrollbars" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/rl_mid"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="12dp"
        android:background="@mipmap/right_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_create_room"
            style="@style/right_image_view"
            android:layout_above="@+id/iv_find_room"
            android:src="@mipmap/create_room" />

        <ImageView
            android:id="@+id/iv_find_room"
            style="@style/right_image_view"
            android:layout_above="@+id/iv_fast_join"
            android:src="@mipmap/find_room" />

        <ImageView
            android:id="@+id/iv_fast_join"
            style="@style/right_image_view"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/fast_join" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/left_grade"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/answer_back" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/grade_one1"
                    style="@style/grade_image_view"
                    android:src="@mipmap/check1" />

                <ImageView
                    android:id="@+id/grade_two1"
                    style="@style/grade_image_view"
                    android:src="@mipmap/uncheck2" />

                <ImageView
                    android:id="@+id/grade_three1"
                    style="@style/grade_image_view"
                    android:src="@mipmap/uncheck3" />

                <ImageView
                    android:id="@+id/grade_four1"
                    style="@style/grade_image_view"
                    android:src="@mipmap/uncheck4" />

                <ImageView
                    android:id="@+id/grade_five1"
                    style="@style/grade_image_view"
                    android:src="@mipmap/uncheck5" />

                <ImageView
                    android:id="@+id/grade_six1"
                    style="@style/grade_image_view"
                    android:src="@mipmap/uncheck6" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/mid_grade" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/right_grade" />
    </LinearLayout>
</RelativeLayout>