<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:orientation="vertical">

    <ImageView
        android:id="@+id/user_item_icon"
        android:layout_width="@dimen/space_85"
        android:layout_height="@dimen/space_85"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/space_6"
        android:src="@drawable/watch_head"
        android:padding="2dp"
        android:background="@drawable/shape_circle_ring"/>

    <TextView
        android:id="@+id/user_item_integral"
        android:layout_width="110.7dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:background="@drawable/user_icon_rect_bottom_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/space_63"
        android:maxLines="1"
        android:text="20"
        android:textColor="#ffe233"
        android:textSize="@dimen/text_size_20"
        android:textStyle="bold"/>

    <!--点赞部分-->
    <TextView
        android:id="@+id/user_item_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@mipmap/like_normal"
        android:drawableStart="@mipmap/like_normal"
        android:drawablePadding="@dimen/space_3"
        android:gravity="bottom"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:src="@mipmap/ic_integral"/>
</FrameLayout>