<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/wishing_castle_select_bg1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/desire_bg1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="18.7dp"
        android:src="@drawable/desire_nail"
        app:layout_constraintBottom_toBottomOf="@+id/wishing_cave_guideline1"
        app:layout_constraintLeft_toLeftOf="@+id/wishing_castle_select_bg1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/wishing_cave_top_line1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginRight="18.7dp"
        android:src="@drawable/desire_nail"
        app:layout_constraintBottom_toBottomOf="@+id/wishing_cave_guideline1"
        app:layout_constraintRight_toRightOf="@+id/wishing_castle_select_bg1"
        app:layout_constraintTop_toTopOf="parent" />

    <com.zhongke.content.recyclerview.BaseRecyclerView
        android:id="@+id/wishing_wishing_castle_select_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="47.3dp"
        android:layout_marginRight="50.7dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/wishing_castle_select_line2"
        app:layout_constraintLeft_toLeftOf="@+id/wishing_castle_select_bg1"
        app:layout_constraintRight_toRightOf="@+id/wishing_castle_select_bg1"
        app:layout_constraintTop_toTopOf="@+id/wishing_castle_select_bg1">

    </com.zhongke.content.recyclerview.BaseRecyclerView>

    <ImageView
        android:id="@+id/wishing_wishing_castle_select_content_bg"
        app:layout_constraintTop_toBottomOf="@+id/wishing_wishing_castle_select_recycler_view"
        app:layout_constraintBottom_toTopOf="@+id/wishing_castle_select_bottom_bg"
        app:layout_constraintLeft_toLeftOf="@+id/wishing_castle_select_bg1"
        app:layout_constraintRight_toRightOf="@+id/wishing_castle_select_bg1"
        android:layout_marginTop="2.3dp"
        android:layout_marginBottom="5.3dp"
        android:layout_marginLeft="19.3dp"
        android:layout_marginRight="17.3dp"
        android:background="@drawable/wishing_castle_select"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/wishing_castle_select_viewpager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/wishing_wishing_castle_select_content_bg"
        app:layout_constraintBottom_toBottomOf="@+id/wishing_wishing_castle_select_content_bg"
        app:layout_constraintLeft_toLeftOf="@+id/wishing_wishing_castle_select_content_bg"
        app:layout_constraintRight_toRightOf="@+id/wishing_wishing_castle_select_content_bg">

    </android.support.v4.view.ViewPager>


    <ImageView
        android:id="@+id/wishing_castle_select_bottom_bg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/wishing_castle_select_bottom_bgt"
        app:layout_constraintBottom_toBottomOf="@+id/wishing_castle_select_bg1"
        app:layout_constraintLeft_toLeftOf="@+id/wishing_castle_select_bg1"
        app:layout_constraintRight_toRightOf="@+id/wishing_castle_select_bg1" />

    <TextView
        android:id="@+id/wishing_castle_select_tip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/wishing_castle_select_bottom_bg"
        app:layout_constraintLeft_toLeftOf="@+id/wishing_castle_select_bottom_bg"
        app:layout_constraintRight_toRightOf="@+id/wishing_castle_select_bottom_bg"
        app:layout_constraintTop_toTopOf="@+id/wishing_castle_select_bottom_bg" />

    <android.support.constraint.Guideline
        android:id="@+id/wishing_cave_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.0919" />

    <android.support.constraint.Guideline
        android:id="@+id/wishing_castle_select_line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1580" />

</android.support.constraint.ConstraintLayout>