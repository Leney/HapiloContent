<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_exercise_bg4">

    <ImageView
        android:id="@+id/iv_photo_exercise"
        android:layout_width="212dp"
        android:layout_height="223dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/acount"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@drawable/exercise_time_bg"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="23.8sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/iv_photo_exercise"
        app:layout_constraintRight_toRightOf="@+id/iv_photo_exercise"
        app:layout_constraintTop_toTopOf="@+id/iv_photo_exercise" />

    <TextView
        android:id="@+id/tv_exercise_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:drawableLeft="@drawable/exercise_location_icon"
        android:drawablePadding="8dp"
        android:text="haplio活动覆盖区域"
        android:textColor="#966443"
        android:textSize="22sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_photo_exercise"
        app:layout_constraintTop_toTopOf="@+id/iv_photo_exercise" />

    <TextView
        android:id="@+id/tv_exercise_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="18dp"
        android:drawableLeft="@drawable/exercise_time_icon"
        android:drawablePadding="8dp"
        android:text="开始时间7月26日19：00"
        android:textColor="#966443"
        android:textSize="22sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_photo_exercise"
        app:layout_constraintTop_toBottomOf="@+id/tv_exercise_location" />

    <TextView
        android:id="@+id/tv_exercise_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="18dp"
        android:drawableLeft="@drawable/exercise_text_icon"
        android:drawablePadding="8dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="线上直播得把得把线上直播得把得把线上直播播得上直播直播得把得把线上直播播得上直播直播得把得把线上直播播得上直播直播得把得把线上直播播得上直播得把得把"
        android:textColor="#966443"
        android:textSize="22sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_photo_exercise"
        app:layout_constraintTop_toBottomOf="@+id/tv_exercise_time" />

    <ImageView
        android:id="@+id/iv_line"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/dividing_line"
        app:layout_constraintLeft_toRightOf="@+id/iv_photo_exercise"
        app:layout_constraintTop_toBottomOf="@+id/tv_exercise_text" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="14dp"
        android:text="这些小伙伴已经参加了："
        android:textColor="#966443"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_photo_exercise"
        app:layout_constraintTop_toBottomOf="@+id/iv_line" />

    <LinearLayout
        android:id="@+id/ll_photo"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="7"
        app:layout_constraintLeft_toRightOf="@+id/iv_photo_exercise"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv1" />
</android.support.constraint.ConstraintLayout>