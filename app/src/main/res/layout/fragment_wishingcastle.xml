<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/wishing_castle_bg1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/desire_bg1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="18.7dp"
        android:src="@drawable/desire_nail"
        app:layout_constraintBottom_toBottomOf="@+id/wishing_cave_guideline1"
        app:layout_constraintLeft_toLeftOf="@+id/wishing_castle_bg1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/wishing_castle_top_line1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginRight="18.7dp"
        android:src="@drawable/desire_nail"
        app:layout_constraintBottom_toBottomOf="@+id/wishing_cave_guideline1"
        app:layout_constraintRight_toRightOf="@+id/wishing_castle_bg1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/wishing_castle_bottom_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="12.7dp"
        android:layout_marginRight="3.5dp"
        android:layout_marginTop="11.3dp"
        android:background="@drawable/desire_content_default_bg"
        app:layout_constraintBottom_toBottomOf="@+id/wishing_castle_float_iv"
        app:layout_constraintLeft_toLeftOf="@+id/wishing_castle_float_iv"
        app:layout_constraintRight_toRightOf="@+id/wishing_castle_float_iv"
        app:layout_constraintTop_toTopOf="@+id/wishing_castle_float_iv" />

    <ImageView
        android:id="@+id/wishing_castle_float_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="26.7dp"
        android:layout_marginLeft="18.7dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="26.7dp"
        android:background="@mipmap/wishing_float_bg"
        app:layout_constraintBottom_toBottomOf="@+id/wishing_castle_bg1"
        app:layout_constraintLeft_toLeftOf="@+id/wishing_castle_bg1"
        app:layout_constraintRight_toRightOf="@+id/wishing_castle_guideline1"
        app:layout_constraintTop_toTopOf="@+id/wishing_castle_bg1" />

    <ImageView
        android:id="@+id/wishing_castle_bg2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="19.3dp"
        android:layout_marginRight="16.7dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/wishing_cave_bg2"
        app:layout_constraintBottom_toBottomOf="@+id/wishing_castle_bg1"
        app:layout_constraintLeft_toLeftOf="@+id/wishing_castle_guideline1"
        app:layout_constraintRight_toRightOf="@+id/wishing_castle_bg1"
        app:layout_constraintTop_toTopOf="@+id/wishing_castle_bg1" />


    <TextView
        android:id="@+id/wishing_castle_tip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16.7dp"
        android:layout_marginTop="54.7dp"
        android:text="你刚刚选择了**********作为你想要的愿望，你确定吗？每个小朋友只能许下XX愿望哦！"
        android:textColor="#5e2908"
        android:textSize="24.1sp"
        app:layout_constraintLeft_toLeftOf="@+id/wishing_castle_bg2"
        app:layout_constraintRight_toRightOf="@+id/wishing_castle_bg2"
        app:layout_constraintTop_toTopOf="@+id/wishing_castle_bg2" />


    <ImageView
        android:id="@+id/wishing_castle_sure_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:src="@mipmap/wishing_castle_sure_btn"
        app:layout_constraintBottom_toBottomOf="@+id/wishing_castle_bg2"
        app:layout_constraintLeft_toLeftOf="@+id/wishing_castle_bg2"
        app:layout_constraintRight_toRightOf="@+id/wishing_castle_bg2" />

    <android.support.constraint.Guideline
        android:id="@+id/wishing_castle_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3864" />

    <android.support.constraint.Guideline
        android:id="@+id/wishing_cave_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.0919"
        />


</android.support.constraint.ConstraintLayout>