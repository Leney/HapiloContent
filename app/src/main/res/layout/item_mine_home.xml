<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5.3dp"
    android:paddingLeft="11.3dp"
    android:paddingRight="16.7dp"
    android:paddingTop="4dp">

    <ImageView
        android:id="@+id/item_mine_home_default_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@mipmap/mine_home_default_icon" />

    <TextView
        android:id="@+id/item_mine_home_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="妈妈"
        android:textColor="#2381a4"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/item_mine_home_default_icon"
        app:layout_constraintTop_toTopOf="@+id/item_mine_home_default_icon" />


    <TextView
        android:id="@+id/item_mine_home_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4.7dp"
        android:text="使对方VS大概十多个电饭煲等富含淀粉劳动法急死了都放假阿里山的飞机拉伸的解放辣椒的弗拉时代峻峰劳动时间爱疯了静安寺附近阿斯兰的解放啦水电费"
        android:textColor="#cc63300e"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/item_mine_home_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_mine_home_name" />

    <com.zhongke.content.view.ShowImageLayout
        android:id="@+id/item_mine_home_show_image_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintLeft_toLeftOf="@+id/item_mine_home_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_mine_home_content"></com.zhongke.content.view.ShowImageLayout>

    <TextView
        android:id="@+id/item_mine_home_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9.3dp"
        android:text="5分钟前"
        android:textColor="#cc966443"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/item_mine_home_content"
        app:layout_constraintTop_toBottomOf="@+id/item_mine_home_show_image_layout" />

    <ImageView
        android:id="@+id/mine_home_comment_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.7dp"
        android:src="@mipmap/mine_home_comment"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_mine_home_show_image_layout" />

    <LinearLayout
        android:id="@+id/mine_home_comment_dialog_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:visibility="gone"
        android:background="@drawable/mine_home_comment_dialog_bg"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        app:layout_constraintRight_toLeftOf="@+id/mine_home_comment_iv"
        app:layout_constraintTop_toBottomOf="@+id/item_mine_home_show_image_layout">

        <TextView
            android:id="@+id/mine_home_controller_like_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/mine_home_comment_dialog_heart_iv"
            android:drawablePadding="2.7dp"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="14.7sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="6.7dp"
            android:layout_marginRight="6.7dp"
            android:src="@drawable/mine_home_comment_dialog_line_iv" />

        <TextView
            android:id="@+id/mine_home_comment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/mine_home_comment_dialog_comment_iv"
            android:drawablePadding="2.7dp"
            android:gravity="center"
            android:text="评论"
            android:textColor="@color/white"
            android:textSize="14.7sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.7dp"
        android:background="@drawable/mine_home_comment_content_bg"
        android:orientation="vertical"
        android:paddingTop="4dp"
        app:layout_constraintLeft_toLeftOf="@+id/item_mine_home_date_tv"
        app:layout_constraintRight_toRightOf="@+id/mine_home_comment_iv"
        app:layout_constraintTop_toBottomOf="@+id/mine_home_comment_iv">
        <TextView
            android:id="@+id/item_mine_home_like_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.3dp"
            android:layout_marginRight="13.3dp"
            android:drawableLeft="@drawable/mine_home_comment_content_heart_iv"
            android:drawablePadding="10.7dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="蕾蕾，磊磊，泪儿"
            android:textColor="#2381a4"
            android:textSize="14.7sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="#d0cdcd" />

        <LinearLayout
            android:id="@+id/mine_home_comment_layout_manager"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="13.3dp"
            android:layout_marginRight="13.3dp"
            android:layout_height="wrap_content">


        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>