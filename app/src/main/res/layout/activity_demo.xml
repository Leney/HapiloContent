        android:id="@+id/create_float_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="生成悬浮窗口"/>
    <Button
        android:id="@+id/hide_float_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="隐藏悬浮窗口"/>
</LinearLayout>