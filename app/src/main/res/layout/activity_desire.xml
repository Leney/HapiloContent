<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:id="@+id/desire_guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.067" />

    <android.support.constraint.Guideline
        android:id="@+id/desire_guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.937" />

    <android.support.constraint.Guideline
        android:id="@+id/desire_guideline_left_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.027" />

    <ImageView
        android:id="@+id/desire_top_small_bg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/launcher_desire_gif_top_left"
        app:layout_constraintLeft_toLeftOf="@+id/desire_top_bg1"
        app:layout_constraintRight_toLeftOf="@+id/desire_top_small_bg2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/desire_top_small_bg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/launcher_desire_gif_top_right"
        app:layout_constraintLeft_toRightOf="@+id/desire_top_small_bg1"
        app:layout_constraintRight_toRightOf="@+id/desire_top_bg1"
        app:layout_constraintTop_toTopOf="@+id/desire_top_small_bg1" />

    <ImageView
        android:id="@+id/desire_content_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="18.7dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/launcher_desire_content_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/desire_top_bg1"
        app:layout_constraintRight_toRightOf="@+id/desire_top_bg1"
        app:layout_constraintTop_toTopOf="@+id/desire_top_bg1" />

    <ImageView
        android:id="@+id/desire_bottom_small_left_bg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2.5dp"
        android:layout_marginLeft="2dp"
        android:src="@mipmap/launcher_desire_gif_bottom_left"
        app:layout_constraintBottom_toBottomOf="@+id/desire_content_bg"
        app:layout_constraintLeft_toLeftOf="@+id/desire_content_bg" />

    <ImageView
        android:id="@+id/desire_content_layout_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="12.7dp"
        android:layout_marginTop="12.7dp"
        android:background="@drawable/launcher_desire_card_bg"
        app:layout_constraintBottom_toBottomOf="@+id/desire_guideline_5"
        app:layout_constraintLeft_toRightOf="@+id/desire_bottom_small_left_bg1"
        app:layout_constraintRight_toRightOf="@+id/desire_content_bg"
        app:layout_constraintTop_toTopOf="@+id/desire_content_bg">
    </ImageView>



    <ImageView
        android:id="@+id/desire_bottom_small_right_bg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="38dp"
        android:src="@mipmap/launcher_desire_qiqiu_bottom_right"
        app:layout_constraintBottom_toBottomOf="@+id/desire_content_bg"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintLeft_toLeftOf="@+id/desire_bottom_small_right_bg2"
        app:layout_constraintRight_toRightOf="@+id/desire_bottom_small_right_bg2" />

    <ImageView
        android:id="@+id/desire_bottom_small_right_bg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="1dp"
        android:src="@mipmap/launcher_desire_gif_bottom_right"
        app:layout_constraintBottom_toBottomOf="@+id/desire_bottom_small_left_bg1"
        app:layout_constraintRight_toRightOf="@+id/desire_content_bg" />
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/desire_content_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/desire_guideline_5"
        app:layout_constraintLeft_toLeftOf="@+id/desire_content_layout_bg"
        app:layout_constraintRight_toRightOf="@+id/desire_content_layout_bg"
      app:layout_constraintTop_toTopOf="@+id/desire_guideline_4">

    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/launcher_desire_decoration"
        app:layout_constraintRight_toRightOf="@+id/desire_content_layout_bg"
        app:layout_constraintTop_toTopOf="@+id/desire_content_layout_bg" />
    <ImageView
        android:id="@+id/desire_top_bg1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:src="@drawable/launcher_desire_top_1"
        app:layout_constraintLeft_toLeftOf="@+id/desire_guideline_left"
        app:layout_constraintRight_toRightOf="@+id/desire_guideline_right"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/desire_top_bg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/launcher_desire_top_2"
        app:layout_constraintLeft_toLeftOf="@+id/desire_top_bg1"
        app:layout_constraintRight_toRightOf="@+id/desire_top_bg1"
        app:layout_constraintTop_toTopOf="@+id/desire_top_bg1" />

    <ImageView
        android:id="@+id/desire_top_bg3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/launcher_desire_top_3"
        app:layout_constraintLeft_toLeftOf="@+id/desire_top_bg1"
        app:layout_constraintRight_toRightOf="@+id/desire_top_bg1" />

    <ImageView
        android:id="@+id/desire_swing_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="4dp"
        android:src="@mipmap/launcher_desire_swing_left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/desire_swing_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        android:src="@mipmap/launcher_desire_swing_right"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/desire_swing_left" />
    <RelativeLayout
        android:layout_width="wrap_content"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintRight_toRightOf="@+id/desire_swing_right"
        app:layout_constraintLeft_toLeftOf="@+id/desire_swing_right"
        app:layout_constraintBottom_toBottomOf="@+id/desire_content_bg"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/desire_swing_right">
        <com.zhongke.content.view.DropDownChild
            android:id="@+id/desire_back_drop_down_child"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        </com.zhongke.content.view.DropDownChild>

    </RelativeLayout>

    <com.zhongke.content.view.DropDownLayout
        android:id="@+id/desire_drop_down_layout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/desire_content_bg"
        app:layout_constraintTop_toBottomOf="@+id/desire_swing_left">

    </com.zhongke.content.view.DropDownLayout>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/launcher_desire_ribbon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/desire_guideline_4"
        app:layout_constraintGuide_percent="0.2083"
        android:orientation="horizontal" />
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/desire_guideline_5"
        app:layout_constraintGuide_percent="0.9375"
        android:orientation="horizontal" />
</android.support.constraint.ConstraintLayout>