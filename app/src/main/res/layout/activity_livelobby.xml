<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/live_lobby_bg">

    <ImageView
        android:id="@+id/live_lobby_stick"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/live_lobby_stick"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/live_lobby_guideline1" />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/live_lobby_guideline12"
        android:background="@drawable/activity_detail_bottom_img"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/live_lobby_raisins"
        app:layout_constraintRight_toRightOf="@+id/live_lobby_guideline2"
        app:layout_constraintTop_toTopOf="@+id/live_lobby_guideline3" />
    <ImageView
        android:id="@+id/live_lobby_live_bobby_bg"
        android:layout_width="wrap_content"
        android:src="@mipmap/live_lobby_top_live_bg"
        app:layout_constraintLeft_toLeftOf="@+id/live_lobby_content_bg"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@+id/live_lobby_content_bg"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/live_lobby_content_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:background="@drawable/live_lobby_content_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/live_lobby_guideline4"
        app:layout_constraintRight_toRightOf="@+id/live_lobby_guideline5"
        app:layout_constraintTop_toTopOf="@+id/live_lobby_guideline6" />

