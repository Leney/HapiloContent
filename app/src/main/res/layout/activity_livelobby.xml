    <ImageView
        android:id="@+id/live_lobby_horitain_line"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@mipmap/live_lobby_horitain_line"
        android:layout_height="12dp" />

    <android.support.constraint.Guideline
        android:id="@+id/live_lobby_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1277" />

    <android.support.constraint.Guideline
        android:id="@+id/live_lobby_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.891" />

    <android.support.constraint.Guideline
        android:id="@+id/live_lobby_guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.0556" />

    <android.support.constraint.Guideline
        android:id="@+id/live_lobby_guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.0742" />

    <android.support.constraint.Guideline
        android:id="@+id/live_lobby_guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9288" />

    <android.support.constraint.Guideline
        android:id="@+id/live_lobby_guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1125" />

    <android.support.constraint.Guideline
        android:id="@+id/live_lobby_guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.0914" />

    <android.support.constraint.Guideline
        android:id="@+id/live_lobby_guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96" />
    <android.support.constraint.Guideline
        android:id="@+id/live_lobby_guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1527" />
    <android.support.constraint.Guideline
        android:id="@+id/live_lobby_guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1093" />
    <android.support.constraint.Guideline
        android:id="@+id/live_lobby_guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8944" />
    <android.support.constraint.Guideline
        android:id="@+id/live_lobby_guideline12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.930" />
</android.support.constraint.ConstraintLayout>