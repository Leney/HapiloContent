    <ImageView
        android:id="@+id/live_lobby_top_back_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/live_lobby_top_back_bg"
        app:layout_constraintBottom_toTopOf="@+id/live_lobby_content_bg"
        app:layout_constraintLeft_toRightOf="@+id/rope_left" />

    <ImageView
        android:id="@+id/live_lobby_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/live_lobby_top_bcak_iv"
        app:layout_constraintBottom_toTopOf="@+id/live_lobby_content_bg"
        app:layout_constraintLeft_toLeftOf="@+id/live_lobby_top_back_bg"
        app:layout_constraintRight_toRightOf="@+id/live_lobby_top_back_bg" />

    <ImageView
        android:id="@+id/live_lobby_decoration_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/live_lobby_decoration"
        app:layout_constraintRight_toRightOf="@+id/live_lobby_guideline7"
        app:layout_constraintTop_toBottomOf="@+id/live_lobby_stick" />

    <ImageView
        android:id="@+id/live_lobby_decoration_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotationY="180"
        android:src="@mipmap/live_lobby_decoration"
        app:layout_constraintRight_toRightOf="@+id/live_lobby_guideline8"
        app:layout_constraintTop_toBottomOf="@+id/live_lobby_stick" />

    <ImageView
        android:id="@+id/rope_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:src="@drawable/rope_left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/live_lobby_stick" />

    <ImageView
        android:id="@+id/rope_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:src="@mipmap/rope_right"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/live_lobby_stick" />

    <ImageView
        android:id="@+id/live_lobby_live_bobby"
        android:layout_width="wrap_content"
        android:src="@mipmap/live_lobby_live_bobby"
        app:layout_constraintLeft_toRightOf="@+id/live_lobby_top_back_bg"
        app:layout_constraintBottom_toBottomOf="@+id/live_lobby_guideline9"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/live_lobby_recycler_view_bg"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/live_lobby_live_bobby"
        app:layout_constraintLeft_toRightOf="@+id/live_lobby_decoration_left"
        app:layout_constraintRight_toLeftOf="@+id/live_lobby_decoration_right"
        app:layout_constraintBottom_toBottomOf="@+id/live_lobby_content_bg"
        android:background="@drawable/live_lobby_recycler_view_bg"
        android:layout_height="0dp" />
    <RelativeLayout
        android:id="@+id/live_lobby_switch_content_layout"
        app:layout_constraintLeft_toLeftOf="@+id/live_lobby_guideline10"
        app:layout_constraintRight_toRightOf="@+id/live_lobby_guideline11"
        app:layout_constraintTop_toTopOf="@+id/live_lobby_recycler_view_bg"
        app:layout_constraintBottom_toBottomOf="@+id/live_lobby_recycler_view_bg"
        android:layout_width="0dp"
        android:layout_marginLeft="15.3dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="13.3dp"
        android:layout_height="0dp">
    </RelativeLayout>

    <ImageView
        android:id="@+id/live_lobby_rorate_branches"
        android:layout_width="wrap_content"
        android:src="@mipmap/live_lobby_rorate_branches"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/live_lobby_rorate_shake"
        app:layout_constraintRight_toRightOf="@+id/live_lobby_rorate_shake"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/live_lobby_rorate_shake"
        android:layout_width="wrap_content"
        android:src="@mipmap/live_lobby_rorate_shake"
        app:layout_constraintBottom_toBottomOf="@+id/live_lobby_rorate_branches"
        android:layout_marginBottom="25dp"
        android:adjustViewBounds="true"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/live_lobby_rorate_center"
        android:layout_width="wrap_content"
        android:src="@mipmap/live_lobby_rorate_center"
        app:layout_constraintBottom_toBottomOf="@+id/live_lobby_rorate_shake"
        android:adjustViewBounds="true"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content" />




