<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="14dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/session_own_content">

        <ProgressBar
            android:id="@+id/session_own_progressbar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/session_own_again_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/img_error"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/session_own_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="11.3dp"
        android:layout_toLeftOf="@+id/session_own_iv"
        android:background="@drawable/session_content_bg_own"
        android:paddingBottom="11dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="11dp"
        android:textColor="#333333"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/session_own_iv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true" />
</RelativeLayout>