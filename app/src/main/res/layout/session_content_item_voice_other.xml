<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="14dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/session_voice_other_user_icon"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <RelativeLayout
        android:id="@+id/sesstion_voice_other_voice_lay"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11.3dp"
        android:background="@drawable/session_content_bg_other">

        <ImageView
            android:id="@+id/session_voice_other_img"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/audio_animation_left_list"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/session_voice_other_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6''"/>
</LinearLayout>